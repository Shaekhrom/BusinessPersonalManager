<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".UserPageActivity">

    <Button
        android:id="@+id/botonEventos"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/white"
        android:text="📅Eventos"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitulo" />

    <Button
        android:id="@+id/botonJornada"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="@color/white"
        android:text="⏰Registro de jornada"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonEventos" />

    <Button
        android:id="@+id/botonChat"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="13dp"
        android:backgroundTint="@color/white"
        android:text="📧Correo"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonJornada" />

    <Button
        android:id="@+id/botonPuntuacion"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="💯Puntuacion"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonChat" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="16dp"
        android:text="B.P.M"
        android:textColor="@color/color_dorado"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonSalir"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="50dp"
        android:text="Salir"
        android:textColorLink="@color/black"
        android:textSize="34sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>