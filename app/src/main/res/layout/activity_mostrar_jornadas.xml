<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MostrarJornadasActivity">

    <!-- res/layout/activity_mostrar_jornadas.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tituloDetallesJornadas"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:textColor="#FDD835"
            android:textSize="34sp"
            android:textAlignment="center"
            android:text="Jornadas registradas" />

        <ListView
            android:id="@+id/listViewJornadas"
            android:layout_width="wrap_content"
            android:layout_height="560dp"
            android:text="@color/white" />

        <Button
            android:id="@+id/botonVolverAJornadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="Volver" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>